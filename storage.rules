rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // Profile photos - users can upload their own photo
    // Pattern matches profile_photos/{uid}.jpg
    match /profile_photos/{fileName} {
      allow read: if true;
      allow write: if request.auth != null 
                   && fileName.matches(request.auth.uid + '.*');
    }
    
    // Chat attachments
    match /chat_attachments/{allPaths=**} {
      allow read: if request.auth != null;
      allow write: if request.auth != null;
    }
    
    // Merchant logos
    match /merchant_logos/{allPaths=**} {
      allow read: if true;
      allow write: if request.auth != null;
    }
    
    // KYC documents
    match /kyc_documents/{userId}/{fileName} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
  }
}
